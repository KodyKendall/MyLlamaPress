<%= form_with(model: user, class: "contents") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3" data-llama="app/views/users/_form.html.erb">
      <h2 data-llama="app/views/users/_form.html.erb"><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul data-llama="app/views/users/_form.html.erb">
        <% user.errors.each do |error| %>
          <li data-llama="app/views/users/_form.html.erb"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5" data-llama="app/views/users/_form.html.erb">
    <%= form.label :email %>
    <%= form.text_field :email, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-llama="app/views/users/_form.html.erb">
    <%= form.label :phone %>
    <%= form.text_field :phone, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-llama="app/views/users/_form.html.erb">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-llama="app/views/users/_form.html.erb">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" data-llama="app/views/users/_form.html.erb">
    <%= form.label :organization_id, "Organization" %>
    <%= form.hidden_field :organization_id %>
    <%= text_field_tag :organization_name, user.organization.name, readonly: true, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full bg-gray-100" %>
  </div>

  <div class="my-5">
    <%= form.label :default_side_id, "Default Site" %>
    <%= form.collection_select :default_site_id, user.organization.sites, :id, ->(site) { "#{site.name} (#{site.slug})" }, 
        { prompt: "Select Site" }, 
        { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" } %>
  </div>

  <div class="inline" data-llama="app/views/users/_form.html.erb">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
