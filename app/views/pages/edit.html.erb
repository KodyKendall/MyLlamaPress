<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl text-gray-800">Editing web page</h1>
    <%= button_to @page, method: :delete, 
        class: "p-2 rounded-full hover:bg-red-50 text-red-600 hover:text-red-800 transition-colors", 
        data: { confirm: "Are you sure you want to delete this page?" } do %>
      <i class="fas fa-trash-alt text-xl"></i>
    <% end %>
  </div>

  <div class="bg-white rounded-xl shadow-sm p-6 mb-8">
    <h3 class="font-semibold text-xl text-gray-700 mb-4 flex items-center">
      <i class="fas fa-globe mr-3 text-blue-500"></i>
      What site is this page for?
    </h3>
    
    <select id="site-select" name="page[site_id]" 
        class="w-full md:w-1/2 px-4 py-2 border border-gray-300 rounded-lg 
               focus:ring-2 focus:ring-blue-500 focus:border-blue-500 
               transition-colors">
      <option value="">Select a site...</option>
      <% current_user.organization.sites.each do |site| %>
        <option value="<%= site.id %>" <%= 'selected' if @page&.site&.id == site.id %>>
          <%= site.name %>
        </option>
      <% end %>
    </select>
  </div>
  
  <div class="bg-white rounded-xl shadow-sm p-6 mb-8">
    <%= render "form", page: @page %>
  </div>

  <div class="flex space-x-4">
    <%= link_to @page, 
        class: "flex items-center px-6 py-3 rounded-lg bg-blue-50 text-blue-600 
                hover:bg-blue-100 transition-colors font-medium" do %>
      <i class="fas fa-eye mr-2"></i> View page
    <% end %>
    
    <%= link_to pages_path, 
        class: "flex items-center px-6 py-3 rounded-lg bg-gray-50 text-gray-600 
                hover:bg-gray-100 transition-colors font-medium" do %>
      <i class="fas fa-arrow-left mr-2"></i> Back to pages
    <% end %>
  </div>
</div>
